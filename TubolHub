-- Egg target
getgenv().eggPlace = {"Paradise Egg"}

-- Pets that can be sold (ONLY Paradise Egg pets except Mimic Octopus and 4KG+)
getgenv().petSell = {
    "Ostrich",
    "Peacock",
    "Scarlet Macaw",
    "Capybara"
